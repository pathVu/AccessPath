<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:paddingBottom="0dp"
    android:background="@drawable/single_side_drawable"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/placeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/interui_bold"
        android:textColor="@color/dark_blue_text"
        android:paddingLeft="10dp"
        android:text="place short name"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/placeDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/placeName"
        android:layout_below="@+id/placeName"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="0dp"
        android:paddingLeft="10dp"
        android:fontFamily="@font/interui"
        android:textColor="@color/orange"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="1234 feet" />



</RelativeLayout>