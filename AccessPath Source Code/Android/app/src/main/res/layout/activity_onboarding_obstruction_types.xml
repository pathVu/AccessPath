        android:layout_width="20dp"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/runningSlopeButton"
        app:layout_constraintEnd_toEndOf="@+id/runningSlopeButton"
        app:layout_constraintTop_toTopOf="@+id/runningSlopeButton"
        app:srcCompat="@drawable/lowres_right_navy_chevron" />

    <Button
        android:id="@+id/crossSlopeButton"
